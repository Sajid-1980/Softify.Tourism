@using Softify.Tourism.Web.Models.Attributes
@using Softify.Tourism.Web.Models.Common.Modals
@model EditAttributeModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditAttribute")))
<form name="AttributeEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Attributes.Id" />
@*    <input type="hidden" name="IsStatic" value="@(Model.Service.IsStatic.ToString())" />
*@  
 


        <div class="modal-body">
            <div class="form-group row required">
            <label class="col-md-2 col-form-label" for="attributeName">@L("Name")</label>
                <div class="col-md-4">
                <input id="attributeName" type="text" name="AttributeName" class="form-control" value="@Model.Attributes.AttributeName" required maxlength="32" minlength="2">
                </div>
            <label class="col-md-2 col-form-label" for="attributeDescription">@L("Description")</label>
            <div class="col-md-4">
                <input id="attributeDescription" type="text" name="AttributeDescription" class="form-control" value="@Model.Attributes.AttributeDescription" required maxlength="32" minlength="2">
            </div>
            </div>
            
      
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Attributes/_EditModal.js" asp-append-version="true"></script>
