@using Softify.Tourism.Web.Startup
@model Softify.Tourism.Web.Models.Rooms.RoomListViewModel
@{
    ViewBag.Title = L("Rooms");
    ViewBag.CurrentPageName = PageNames.Rooms;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Rooms/Index.js" asp-append-version="true"></script>
    </environment>

   <environment names="Staging,Production">
        <script src="~/view-resources/Views/Rooms/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                    <h1>@L("Room")</h1>
            </div>
            <div class="col-sm-6">
                    <a href="javascript:;" data-toggle="modal" data-target="#RoomCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                    @await Html.PartialAsync("~/Views/Rooms/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="RoomsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                            
                                            <th>@L("RoomName")</th>
                                            <th>@L("RoomType")</th>
                                            <th>@L("RoomSize")</th>
                                            <th>@L("RoomNo")</th>
                                            <th>@L("RoomRate")</th>
                                            
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

    @await Html.PartialAsync("~/Views/Rooms/_CreateModal.cshtml", Model)

    <div class="modal fade" id="RoomEditModal" tabindex="-1" role="dialog" aria-labelledby="RoomEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
