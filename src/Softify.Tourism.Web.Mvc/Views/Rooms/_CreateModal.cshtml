@using Softify.Tourism.Web.Models.Common.Modals
@model Softify.Tourism.Web.Models.Rooms.EditRoomModalViewModel
@{
    Layout = null;
}
<div class="modal fade" id="RoomCreateModal" tabindex="-1" role="dialog" aria-labelledby="RoomCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewRoom")))
            <form name="roomCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="ServicType">@L("ServiceType")</label>
                        <div class="col-md-4">
                            <select class="form-control" id="ServiceId" type="text" name="ServiceId"   asp-items="ViewBag.ServiceTypeList">
                                <option>--- Select Service Type ---</option>
                                </select>
                        </div>
                        @*<label class="col-md-2 col-form-label" for="RoomName">@L("RoomName")</label>
