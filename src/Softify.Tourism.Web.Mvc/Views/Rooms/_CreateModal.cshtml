                        </div>*@
                        <label class="col-md-2 col-form-label" for="RoomType">@L("RoomType")</label>
                        <div class="col-md-4">
                            <select class="form-control" id="roomType" type="text" name="RoomType">
                                <option>--- Room Type ---</option>
                                <option value="SingleRoom">Single Room</option>
                                <option value="DoubleRoom">Double Room</option>
                                </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="RoomName">@L("RoomName")</label>
                        <div class="col-md-4">
                            <input id="RoomName" type="text" name="RoomName" class="form-control"/>
                        </div>
                        <label class="col-md-2 col-form-label" for="RoomNo">@L("RoomNo")</label>
                        <div class="col-md-4">
                            <select class="form-control" id="roomNo" type="text" name="RoomNo">
                                <option>--- Room No ---</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="NoOfBed">@L("NoOfBed")</label>
                        <div class="col-md-4">
                            <input id="NoOfBed" type="text" name="NoOfBed" class="form-control"/>
                        </div>
                        <label class="col-md-2 col-form-label" for="NoOfExtraBed">@L("NoOfExtraBed")</label>
                        <div class="col-md-4">
                            <input id="NoOfExtraBed" type="text" name="NoOfExtraBed" class="form-control"/>
                        </div>
                    </div>
                     <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="Address">@L("Address")</label>
                        <div class="col-md-4">
                            <input id="Address" type="text" name="Address" class="form-control"/>
                        </div>
                        <label class="col-md-2 col-form-label" for="RoomDescription">@L("RoomDescription")</label>
                        <div class="col-md-4">
                            <input id="RoomDescription" type="text" name="RoomDescription" class="form-control"/>
                        </div>
                    </div>
                     <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="NoOfChild">@L("NoOfChild")</label>
                        <div class="col-md-4">
                            <input id="NoOfChild" type="text" name="NoOfChild" class="form-control"/>
                        </div>
                        <label class="col-md-2 col-form-label" for="NoOfAdult">@L("NoOfAdult")</label>
                        <div class="col-md-4">
                            <input id="NoOfAdult" type="text" name="NoOfAdult" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="TotalAdultAllowed">@L("TotalAdultAllowed")</label>
                        <div class="col-md-4">
                            <input id="TotalAdultAllowed" type="text" name="TotalAdultAllowed" class="form-control"/>
                        </div>
                        <label class="col-md-2 col-form-label" for="TotalChildAllowed">@L("TotalChildAllowed")</label>
                        <div class="col-md-4">
                            <input id="TotalChildAllowed" type="text" name="TotalChildAllowed" class="form-control" />
                        </div>
                    </div>
                     <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="FirstName">@L("RoomFacility")</label>
                        <div class="col-md-4">
                            <input id="RoomFacility" type="text" name="RoomFacility" class="form-control"/>
                        </div>
                        <label class="col-md-2 col-form-label" for="ExtraAdultAllowed">@L("ExtraAdultAllowed")</label>
                        <div class="col-md-4">
                            <input id="ExtraAdultAllowed" type="text" name="ExtraAdultAllowed" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="ExtraChildrenAllowed">@L("ExtraChildrenAllowed")</label>
                        <div class="col-md-4">
                            <input id="ExtraChildrenAllowed" type="text" name="ExtraChildrenAllowed" class="form-control"/>
                        </div>
                        <label class="col-md-2 col-form-label" for="RoomRate">@L("RoomRate")</label>
                        <div class="col-md-4">
                            <input id="RoomRate" type="text" name="RoomRate" class="form-control"/>
                        </div>
                    </div>
                     <div class="form-group row">
                        <label class="col-md-2 col-form-label" for="RoomSize">@L("RoomSize")</label>
                        <div class="col-md-4">
                            <input id="RoomSize" type="text" name="RoomSize" class="form-control" />
                        </div>
                    </div>
                   


